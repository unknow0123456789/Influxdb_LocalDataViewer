<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Table_Fragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/FragmentsTitleTopMargin"
            android:layout_marginBottom="@dimen/LoginEditTextMargin_Vertical"
            android:layout_marginHorizontal="@dimen/LoginEditTextMargin_Horizontal"
            android:text="Table"
            android:textSize="@dimen/FragmentsTitleTextSize"
            android:fontFamily="@font/nexa_heavy"
            android:textColor="@color/black"
            android:id="@+id/Table_Title"
            ></TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Table_TableInfoContainer"
            android:layout_below="@id/Table_Title"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginVertical="@dimen/LoginEditTextMargin_Vertical"
                android:layout_marginHorizontal="@dimen/LoginEditTextMargin_Horizontal"
                android:text="Measurement"
                android:textSize="@dimen/SettingTitle2TextSize"
                android:fontFamily="@font/nexa_extralight"
                android:textColor="@color/black"
                android:id="@+id/Table_MeasurementsTitle"
                ></TextView>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/LoginEditTextMargin_Horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="@dimen/LoginEditTextMargin_Vertical"
                android:layout_below="@id/Table_MeasurementsTitle"
                android:background="@android:color/transparent"
                android:id="@+id/Table_SpinnerMeasurement"
                android:spinnerMode="dropdown"
                style="@style/SpinnerTheme"
                ></Spinner>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Table_TableInfoContainer"
            android:id="@+id/Table_TableContainer"
            android:layout_marginVertical="@dimen/LoginEditTextMargin_Vertical"
            android:layout_marginHorizontal="@dimen/LoginEditTextMargin_Horizontal"
            android:background="@drawable/bordered_connered_rectangle_shape"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/Table_DataTableTitle"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="Time"
                        android:textSize="@dimen/FragmentsNormalTextSize"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nexa_heavy"
                        android:id="@+id/TableData_Time"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="5dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Value"
                        android:textColor="@color/black"
                        android:textSize="@dimen/FragmentsNormalTextSize"
                        android:fontFamily="@font/nexa_heavy"
                        android:id="@+id/TableData_Value"
                        />
                </RelativeLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Table_DataTableTitle"
                android:id="@+id/Table_DataTable"
                ></androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
        </RelativeLayout>
</FrameLayout>