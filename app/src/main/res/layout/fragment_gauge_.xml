<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Gauge_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/FragmentsTitleTopMargin"
            android:layout_marginBottom="@dimen/LoginEditTextMargin_Vertical"
            android:layout_marginHorizontal="@dimen/LoginEditTextMargin_Horizontal"
            android:text="Gauge"
            android:textSize="@dimen/FragmentsTitleTextSize"
            android:fontFamily="@font/nexa_heavy"
            android:textColor="@color/black"
            android:id="@+id/Gauge_Title"
            ></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Gauge_RecyclerView"
            android:layout_below="@id/Gauge_Title"
            ></androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

</FrameLayout>